<tr id="<%= dom_id contact%>">
  <td>
    <%= contact.first_name %>
  </td>
  <td>
    <%= contact.last_name %>
  </td>
  <td>
    <%= contact.email %>
  </td>
  <td>
    <%= contact.phone %>
  </td>
  <td>
    <%= contact.social_media %>
  </td>
  <td>
    <% if current_page?(root_path) or current_page?(contacts_path) %>
      <%= link_to "Show", contact, class:"btn btn-outline-secondary" %>
    <%end%>
    <%if current_page?(contact)%>
      <%= link_to "Edit this contact", edit_contact_path(@contact), class:"btn btn-outline-secondary" %>
      <%= link_to "Back to homepage", contacts_path, class:"btn btn-outline-secondary" %>
      <%= button_to "Remove contact", @contact, method: :delete, class:"btn btn-outline-danger mt-2" %>
    <%end%>
  </td>
</tr>
